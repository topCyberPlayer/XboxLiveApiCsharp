@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<body>
    <div class="table-responsive">
        <p>All Gamers</p>
        <table class="table table-striped recipe">
            <thead>
                <tr>
                    <th>Gamertag</th>
                    <th>Gamerscore</th>
                    <th>Games count</th>
                    <th>Achievements count</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var profile in Model.GamerOutput)
                {
                    <tr>
                        <td class="align-middle">@profile.Gamertag</td>
                        <td class="align-middle">@profile.Gamerscore</td>
                        <td class="align-middle">@profile.Games</td>
                        <td class="align-middle">@profile.Achievements</td>
                        <td class="align-middle">
                            <a class="btn btn-primary"
                            asp-page="Gamer/Index" 
                            asp-route-gamertag="@profile.Gamertag">View Profile</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <p>All Games</p>
        <table class="table table-striped recipe">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Achievements</th>
                    <th>Gamerscore</th>
                    <th>Gamers</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model.GameOutput)
                {
                    <tr>
                        <td class="align-middle">@game.GameName</td>
                        <td class="align-middle">@game.TotalAchievements</td>
                        <td class="align-middle">@game.TotalGamerscore</td>
                        <td class="align-middle">@game.TotalGamers</td>
                        <td class="align-middle">
                            <a class="btn btn-primary"
                               asp-page="Game/Achievements"
                               asp-route-gameId="@game.GameId">View Achievements</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
