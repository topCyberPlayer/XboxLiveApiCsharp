@using Microsoft.AspNetCore.Identity
@using XblApp.Database.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        var currentUser = await UserManager.GetUserAsync(User);
        var gamertag = currentUser?.UserName ?? "Gamer";

    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                @gamertag
        </a>
        <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-page="/User">My profile</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Account Settings</a></li>
                <li><hr class="dropdown-divider"/></li>
                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">Logout</a></li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
